<div id="<%= dom_id track %>">

  <div class="flex-container">
  
    <div>
      <%= image_tag(track.image, class: "message-image", height: 100, width: 100) %>
    </div>

    <div class="column-container">
      <div>
        <strong><%= track.song %></strong>
      </div>
      <div>
        <%= track.artist %>
      </div>
    
      <div>
        <%= audio_tag(url_for(track.audio), class: "message-audio", controls: "") %>
      </div>
    </div>
  </div>
</div>
